{
  "name": "rest",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "babel src -d dist",
    "start": "npm run build && node dist/server/index.js",
    "start-dev": "nodemon src/server --exec babel-node",
    "docker:build": "docker-compose up --build",
    "docker:up": "docker-compose up",
    "format": "prettier --write \"**/*.{js,jsx,json,md}\"",
    "lint": "eslint src/ --fix",
    "test": "NODE_ENV=test jest --detectOpenHandles --runInBand --verbose --passWithNoTests",
    "coverage": "NODE_ENV=test jest --detectOpenHandles --runInBand --verbose --collect-coverage --passWithNoTests",
    "create-db": "sequelize-cli db:create",
    "drop-db": "sequelize-cli db:drop",
    "apply-migrations": "sequelize-cli db:migrate",
    "revert-migrations": "sequelize-cli db:migrate:undo:all",
    "apply-seeders": "sequelize-cli db:seed:all",
    "revert-seeders": "sequelize-cli db:seed:undo:all"
  },
  "dependencies": {
    "@admin-bro/express": "^3.1.0",
    "@admin-bro/sequelize": "^1.2.1",
    "@faker-js/faker": "^7.2.0",
    "admin-bro": "^4.0.1",
    "cookie-parser": "~1.4.6",
    "dayjs": "^1.11.3",
    "dotenv": "^16.0.1",
    "express": "~4.18.1",
    "express-formidable": "^1.2.0",
    "express-session": "^1.17.3",
    "express-validation": "^4.1.0",
    "http-errors": "~2.0.0",
    "http-status": "^1.5.2",
    "jade": "~1.11.0",
    "morgan": "~1.10.0",
    "pg": "^8.7.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.20.1",
    "sqlite3": "^5.0.8",
    "swagger-ui-express": "^4.4.0",
    "tslib": "^2.4.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.10",
    "@babel/core": "^7.18.5",
    "@babel/node": "^7.18.5",
    "@babel/preset-env": "^7.18.2",
    "@babel/register": "^7.17.7",
    "babel-jest": "^28.1.1",
    "babel-plugin-module-resolver": "^4.1.0",
    "debug": "^4.3.4",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-import-resolver-babel-module": "^5.3.1",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-security": "^1.5.0",
    "jest": "^28.1.1",
    "nodemon": "^2.0.16",
    "prettier": "^2.7.0",
    "sequelize-cli": "^6.4.1",
    "supertest": "^6.2.3"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**",
      "!**/tests/**",
      "!**/utils/**",
      "!**/**test**",
      "!**/middlewares/**"
    ],
    "testPathIgnorePatterns": [
      "/.imagine/",
      "<rootDir>/dist/"
    ]
  }
}
